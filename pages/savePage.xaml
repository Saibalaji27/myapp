<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:picker="clr-namespace:Syncfusion.Maui.Picker;assembly=Syncfusion.Maui.Picker"
             xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:Class="login.savePage"
             xmlns:viewmodel="clr-namespace:login.viewModel"
             x:DataType="viewmodel:savePageViewModel"
             Title="content page">
    <ScrollView>
    <VerticalStackLayout BackgroundColor="White">
            <Frame BackgroundColor="LightPink" Margin="10,5,10,5">
            <Grid RowDefinitions="*,*"
                  ColumnDefinitions="70,*"
                  Margin="10,5,10,5">
          
                <Label Grid.Row="0"
                       Grid.Column="0"
                    Text="NAME :"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                       FontAttributes="Bold"/>
               
                    <Entry Grid.Row="0"
                     Grid.Column="1"
                           Text="{Binding Name}"
                     Placeholder="enter your name"
                     PlaceholderColor="Black"
                     HorizontalTextAlignment="Start"
                           FontAttributes="Bold"/>
            
                        <Label Grid.Row="1"
                               Grid.Column="0"
                          Text="Country :"
                          VerticalOptions="Center" 
                          HorizontalOptions="Start"
                               FontAttributes="Bold"/>

                    <picker:SfPicker Grid.Row="1"
                                     Grid.Column="1"
                                     HeightRequest="80"
                                     VerticalOptions="End"
                                     HorizontalOptions="End"
                               picker:ItemHeight="40"
                              
                                     >
                        <inputs:SfComboBox VerticalOptions="Center"
                                            BackgroundColor="BlanchedAlmond"
                                           DisplayMemberPath="Name" 
                                            TextColor="Black"
                                           SelectedItem="{Binding Country}"
                                           ItemsSource="{Binding Options}"
                                          />



                    </picker:SfPicker> 
                </Grid>
           
            </Frame>
            
        <Grid RowDefinitions="60 ,*"
                ColumnDefinitions="*">

                <VerticalStackLayout Grid.RowSpan="2"
                                 Grid.Column="0" >
                    <Frame Margin="50,5,40,2" BackgroundColor="CornflowerBlue">
                        <Label Text="RATE YOUR EXPERIENCE    😁🫰 " 
                               FontSize="Medium" FontAttributes="Bold" 
                               HorizontalTextAlignment="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1"
                                        Grid.ColumnSpan="3" Padding="20">
                   
                    <Slider Margin="10,0,10,0" Minimum="1" VerticalOptions="Start"
                             Maximum="5" 
                             ValueChanged="Slider_ValueChanged" 
                             MaximumTrackColor="DeepSkyBlue"
                             ThumbImageSource="star1.png"  ThumbColor="Black" 
                       />
                 
                    <Label x:Name="RatingValue" 
                           Text="{Binding Rating ,Mode=TwoWay}"
                           HorizontalOptions="Center" 
                           FontAttributes="Bold" FontSize="18" 
                           />
                       
                </VerticalStackLayout>
           
            </Grid>
            <Button Margin="20,0,20,0" Text="save"
               Command="{Binding SaveCommand}"
                    HorizontalOptions="Fill"            
                 />

        
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>